{
  "buildCommand": "npm run build",
  "outputDirectory": "dist/public",
  "framework": "vite",
  "installCommand": "npm install",
  "devCommand": "npm run frontend",
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://web-production-14e5.up.railway.app/api/:path*"
    },
    {
      "source": "/sample-images/:path*",
      "destination": "https://web-production-14e5.up.railway.app/sample-images/:path*"
    },
    {
      "source": "/:path*",
      "destination": "/"
    }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}
